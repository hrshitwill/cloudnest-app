# Example environment variables for Cloudnest
# Copy this file to .env and edit values for local development

# Backend
PORT=4000
UPLOADS_DIR=server/uploads
META_FILE=server/metadata.json
MAX_FILE_SIZE=10485760
ALLOWED_MIME=image/jpeg,image/png,application/pdf,text/plain
AUTH_TOKEN=
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQ=300

# Frontend build-time URL (CRA expects REACT_APP_ prefix)
REACT_APP_API_URL=http://localhost:4000
REACT_APP_API_KEY=
